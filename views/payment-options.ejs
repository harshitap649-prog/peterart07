<%- include('header') %>
<div class="payment-options-container">
  <div class="payment-options-content">
    <div class="payment-artwork-preview">
      <img src="<%= art.image_path %>" alt="<%= art.title %>" class="payment-preview-image">
      <div class="payment-preview-info">
        <h3><%= art.title %></h3>
        <p class="payment-preview-quantity">Quantity: <%= typeof quantity !== 'undefined' ? quantity : 1 %></p>
        <p class="payment-preview-price">Price per unit: ₹<%= art.price %></p>
        <p class="payment-preview-total">Total: ₹<%= typeof totalPrice !== 'undefined' ? totalPrice.toFixed(0) : art.price %></p>
      </div>
    </div>
    <div class="payment-options-wrapper">
      <h2 class="payment-options-title">Choose Payment Method</h2>
      <div class="payment-methods">
        <a href="/buy/<%= art.id %>/checkout?quantity=<%= typeof quantity !== 'undefined' ? quantity : 1 %>" class="payment-method-card">
          <div class="payment-method-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 4H3C1.89543 4 1 4.89543 1 6V18C1 19.1046 1.89543 20 3 20H21C22.1046 20 23 19.1046 23 18V6C23 4.89543 22.1046 4 21 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M1 10H23" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Cash on Delivery</h3>
          <p>Pay when you receive your order</p>
        </a>
        <div class="payment-method-card disabled">
          <div class="payment-method-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 4H3C1.89543 4 1 4.89543 1 6V18C1 19.1046 1.89543 20 3 20H21C22.1046 20 23 19.1046 23 18V6C23 4.89543 22.1046 4 21 4Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M7 15H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>Pay Online</h3>
          <p>Coming Soon</p>
          <span class="coming-soon-badge">Soon</span>
        </div>
      </div>
      <a href="/buy/<%= art.id %>" class="back-link">← Back</a>
    </div>
  </div>
</div>
<%- include('footer') %>